<div class="flex flex-wrap gap-5 justify-center">
    <% @movies.each do |movie| %>
        <div class="w-[350px] bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
            <a href="#" class="h-[450px]">
                <img class="rounded-t-lg w-full h-full max-h-[450px] object-cover" src="<%= "#{base_image_url}#{movie["poster_path"]}" %>" alt="<%= movie["title"] %>" />
            </a>
            <div class="p-5">
                <a href="#">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= movie["title"] %></h5>
                </a>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 line-clamp-3"><%= movie["overview"] %></p>
            </div>
        </div>
    <% end %>
</div>
